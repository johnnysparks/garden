{
	"name": "perennial",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"bin": {
		"perennial": "./src/cli/index.ts"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "npm run validate:species && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"validate:species": "tsx scripts/validate-species.ts",
		"play": "tsx src/cli/index.ts play",
		"cli": "tsx src/cli/index.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.3.0",
		"fake-indexeddb": "^6.2.5",
		"svelte": "^5.51.0",
		"svelte-check": "^4.3.6",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"zod": "^4.3.6"
	},
	"dependencies": {
		"dexie": "^4.3.0",
		"miniplex": "^2.0.0"
	}
}
