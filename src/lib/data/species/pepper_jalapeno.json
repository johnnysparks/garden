{
  "id": "pepper_jalapeno",
  "common_name": "Jalapeño Pepper",
  "botanical_name": "Capsicum annuum 'Early Jalapeño'",
  "family": "Solanaceae",
  "type": "annual",
  "growth": {
    "habit": "bush",
    "stages": [
      {
        "id": "seed",
        "duration_weeks": [1, 2],
        "description": "A small, flat, cream-colored seed with a slight curve."
      },
      {
        "id": "germination",
        "duration_weeks": [1, 2],
        "description": "Slow to wake in cool soil. The radicle pushes down while the hypocotyl arches upward, still wearing the seed coat like a helmet."
      },
      {
        "id": "seedling",
        "duration_weeks": [2, 3],
        "description": "Narrow cotyledons give way to the first true leaves — small, smooth, and pointed. The stem is already sturdy for its size."
      },
      {
        "id": "vegetative",
        "duration_weeks": [4, 6],
        "description": "The plant forks into a compact Y-shape, then branches again and again. Dark green foliage fills out into a dense, bushy canopy."
      },
      {
        "id": "flowering",
        "duration_weeks": [2, 3],
        "description": "Small white star-shaped flowers appear at branch nodes, hanging face-down. Each successful pollination will become a pepper."
      },
      {
        "id": "fruiting",
        "duration_weeks": [4, 6],
        "description": "Green peppers swell with thick walls and a blunt tip. Left on the vine, they ripen to deep red with characteristic corking lines."
      },
      {
        "id": "senescence",
        "duration_weeks": [2, 3],
        "description": "Leaves yellow and drop as temperatures cool. Last peppers ripen red on bare branches."
      }
    ],
    "days_to_maturity": [10, 14],
    "max_height_cm": 75,
    "max_spread_cm": 45,
    "growth_rate": "moderate"
  },
  "needs": {
    "sun": "full",
    "water": "moderate",
    "soil_ph": [6.0, 6.8],
    "nutrients": { "N": "moderate", "P": "moderate", "K": "moderate" },
    "soil_temp_min_c": 18,
    "frost_tolerance": "none"
  },
  "season": {
    "sow_window": [4, 8],
